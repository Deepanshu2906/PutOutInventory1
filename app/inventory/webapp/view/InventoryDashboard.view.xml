<mvc:View controllerName="inventory.controller.InventoryDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" 
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"

    displayBlock="true">
    <Page id="DashboardPage" title="Dashboard" titleAlignment="Center">
        <l:VerticalLayout  width="100%" >
             <l:BlockLayout background="Dashboard" >
                <l:BlockLayoutRow >
                    <l:BlockLayoutCell width="90%">
                        <HBox class="flexBox">
                            <VBox>
                                <Label  text="Select Date" />
                                <DatePicker id="dateFilter"  class="filterData" width="150px" />
                            </VBox>
                            
                            <VBox>  
                                <Label  text="Material Req No"/>
                                <Input id="materialReqNoFilter"  class="filterData" width="150px"/>
                            </VBox>
                            <VBox> 
                                <Label  text="Category"/>
                                <Select id="categoryFilter"  class="filterData" width="150px" forceSelection="false">
                                    <core:Item key="cat1" text="Category 1" />
                                    <core:Item key="cat2" text="Category 2" />
                                    <core:Item key="cat3" text="Category 3" />
                                </Select>
                            </VBox> 
                            <VBox>
                                <Label  text="Usability"/>
                                <Select id="usabilityFilter"  class="filterData" width="150px" forceSelection="false">
                                    <core:Item key="usable" text="Usable" />
                                    <core:Item key="notUsable" text="Not Usable" />
                                </Select>
                            </VBox> 
                            <VBox>
                                <Label  text="Status"/>
                                <Select id="statusFilter"  class="filterData" width="150px" forceSelection="false">
                                    <core:Item key="open" text="Open" />
                                    <core:Item key="closed" text="Closed" />
                                    <core:Item key="pending" text="Pending" />
                                </Select>
                            </VBox>

                            <HBox class="GoBtn">
                                <Button text="Go" icon="sap-icon://process" press="onGoFilter"  type="Emphasized"/>
                                <Button text="Refresh" icon="sap-icon://refresh"  class="refreshBtn" press="onRefresh"  type="Neutral"/>
                            </HBox>
                        </HBox>
                    </l:BlockLayoutCell>
                   
                </l:BlockLayoutRow>
                <l:BlockLayoutRow >
                     <l:BlockLayoutCell width="90%">
                        <Table id="inventoryDataTable" width="100%" items="{invData>/inventory}" class="dashboardTable">
                            <columns>
                                <Column  width="20%">
                                    <Text
                                        id="_IDGenText11"
                                        text="Material Req No"
                                       
                                    />

                                </Column>
                                <Column id="_IDGenColumn2"  width="20%">
                                    <Text
                                        id="_IDGenText2"
                                        text=" Created By"
                                    />
                                </Column>
                                <Column id="_IDGeColumn3"  width="20%">
                                    <Text
                                        id="_IDGeText3"
                                        text=" Created On"
                                    />
                                </Column>
                                 <Column id="_IDGeColumn4"  width="20%">
                                    <Text
                                        id="_IDGeText4"
                                        text="View Details"
                                    />
                                </Column>
                                <Column  width="20%">
                                    <Text
                                        text=" Export Details"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem id="_IDGenColumnListItem1">
                                    <cells>
                                    
                                        <Text text="{invData>MaterialReqNo}"/>
                                        <Text text="{invData>CreatedBy}" />
                                        <Text text="{invData>CreatedOn}" />
                                        <Button text="View"  type="Accept" press="onViewPress"/>
                                        <Button icon="sap-icon://download" text="Download" type="Neutral" press="onDownloadPress"/>


                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>

                

             </l:BlockLayout>
        </l:VerticalLayout>
       
      


    </Page>
</mvc:View>
