<mvc:View
    controllerName="inventory.controller.InspectionTable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="secondPage12"
        title="Material Record"
        titleAlignment="Center"
    >
        <l:VerticalLayout
            id="materialDetailsLayout"
            width="100%"
            visible="true"
            class="tablelayout"
        >
            <l:BlockLayout
                id="IDGenBlockLayout2"
                background="Dashboard"
            >
                <l:BlockLayoutRow id="IDGenBlockLayoutRow2">
                    <l:BlockLayoutCell
                        id="IDGenBlockLayoutCell2"
                        width="90%"
                    >
                        <Table
                            id="materialTable"
                            width="auto"
                            contextualWidth="Auto"
                            class="borderedTable"
                            mode="SingleSelectMaster"
                            sticky="ColumnHeaders"
                            noDataText="Loading ..."
                            items="{materialData>/}"
                        >
                            <columns>
                                <Column
                                    id="IDGenColu1"
                                    width="20px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabel2"
                                        text="Request No"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColun2"
                                    width="30px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabel3"
                                        text="Material Code"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColun3"
                                    width="23px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabel5"
                                        text="Category"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColum"
                                    width="30px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabel4"
                                        text="Description"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColum1"
                                    width="25px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabe4"
                                        text="Quantity"
                                        required="true"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColm1"
                                    width="30px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLab4"
                                        text="Status"
                                        required="true"
                                    />
                                </Column>
                                <Column
                                    id="IDGenColu"
                                    width="30px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabee4"
                                        text="Remarks"
                                        required="true"
                                    />
                                </Column>
                                <Column
                                    id="IDGenClum"
                                    width="15px"
                                    hAlign="Center"
                                >
                                    <Label
                                        id="IDGenLabee6"
                                        text=""
                                    />
                                </Column>
                            </columns>
                            <ColumnListItem
                                id="istItem1"
                                class="borderedRow"
                                press="onMaterialRowSelect"
                            >
                                <cells>
                                    <Input
                                        id="IDGenText19"
                                        editable="false"
                                        class="inputItem"
                                        textAlign="Center"
                                        value="{materialData>reqNo}"
                                    />
                                    <Input
                                        id="IDGenText20"
                                        editable="false"
                                        class="inputItem"
                                        textAlign="Center"
                                        value="{materialData>MaterialCode}"
                                    />
                                    <Input
                                        id="IDGenText21"
                                        editable="false"
                                        class="inputItem"
                                        textAlign="Center"
                                        value="{materialData>Category}"
                                    />
                                    <Input
                                        id="IDGenText22"
                                        editable="false"
                                        class="inputItem"
                                        textAlign="Center"
                                        value="{materialData>Description}"
                                    />
                                    <Input
                                        id="IDGenText23"
                                        editable="true"
                                        class="inputItem"
                                        textAlign="Center"
                                        value="{materialData>Quantity}"
                                        change="quantityChange"
                                    />

                                    <Select
                                        id="selectStatus"
                                        forceSelection="false"
                                        width="250px"
                                        class="sapUiSmallMarginEnd"
                                        selectedKey="{materialData>Status}"
                                        change="_onStatusTypeChange"
                                    >
                                        <core:Item
                                            key="Can Use"
                                            text="Can Use"
                                        />
                                        <core:Item
                                            key="Partial"
                                            text="Partial"
                                        />
                                        <core:Item
                                            key="Cannot Use"
                                            text="Cannot Use"
                                        />
                                    </Select>

                                    <Input
                                        id="IDGenText24"
                                        editable="true"
                                        class="inputItem"
                                        value="{materialData>Remarks}"
                                    />

                                    <Button
                                        id="subButton"
                                        icon="sap-icon://begin"
                                        type="Attention"
                                        press="onMaterialRowSelect"
                                    />
                                </cells>
                            </ColumnListItem>
                        </Table>
                        <HBox
                            id="sendBtnBox"
                            class="submitBtnBox"
                        >
                            <Button
                                id="sendButton"
                                text="Submit"
                                press="onSubmit"
                                type="Success"
                            />
                        </HBox>
                    </l:BlockLayoutCell>
                </l:BlockLayoutRow>
            </l:BlockLayout>
        </l:VerticalLayout>
    </Page>
</mvc:View>
